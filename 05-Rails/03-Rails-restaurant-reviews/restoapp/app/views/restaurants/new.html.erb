<h1>Create a new restaurant :</h1>
<%= form_for(@restaurant) do |r| %>

  <%= r.label :name %>
  <%= r.text_field :name %>

  <%= r.label :address %>
  <%= r.text_field :address %>

  <%= r.label :phone %>
  <%= r.text_field :phone %>

  <%= r.submit %>

<% end %>